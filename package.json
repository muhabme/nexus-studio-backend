{
  "name": "nexus-studio-backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch -r tsconfig-paths/register ./server.ts",
    "start": "node -r module-alias/register dist/server.js",
    "build": "tsc",
    "compile": "tsc --noEmit -p . --pretty",
    "format": "eslint . --fix",
    "migrate:make": "knex migrate:make --knexfile ./src/config/database.ts -x ts",
    "migrate:latest": "knex migrate:latest --knexfile ./src/config/database.ts",
    "migrate:rollback": "knex migrate:rollback --knexfile ./src/config/database.ts",
    "migrate:unlock": "knex migrate:unlock --knexfile ./src/config/database.ts",
    "seed": "knex seed:run --knexfile ./src/config/database.ts",
    "seed:make": "knex seed:make --knexfile ./src/config/database.ts -x ts",
    "db:setup": "npm run migrate && npm run seed",
    "db:reset": "knex migrate:rollback:all && npm run migrate && npm run seed"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "deep-diff": "^1.0.2",
    "dotenv": "^17.1.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "http": "0.0.1-security",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "ms": "^2.1.3",
    "mysql2": "^3.14.1",
    "nodemon": "^3.1.10",
    "objection": "^3.1.5",
    "reflect-metadata": "^0.2.2",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/deep-diff": "^1.0.5",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/ms": "^2.1.0",
    "@types/node": "^24.0.11",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "module-alias": "^2.2.3",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "automation",
    "ai",
    "workflow",
    "intelligent",
    "scraping",
    "scheduling"
  ],
  "author": "",
  "license": "ISC"
}